<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{path('home')}}">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    {% if app.user is null%}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_login')}}">Connexion</a>
                    </li>
                    <li>
                        <a class="nav-link"
                            href="{{path('app_register')}}">Inscription</a>
                    </li>
                    {% else %}
                    <li class="nav-item ">
                        <a class="nav-link" href="{{path('category_index')}}">Categories</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="{{path('article_index')}}">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                            href="{{path('app_logout')}}">Deconnexion</a>
                    </li>
                    {% endif %}

                </ul>
            </div>
        </nav>
        {% for type,messages in app.flashes%}
        {% for message in messages %}
        <p class="alert alert-{{type }} ">{{ message }}</p>
        {% endfor %}
        {% endfor %}
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>

</html>
